@model FredsBoats.Web.Models.Boat

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Boat Specification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Category</dt>
        <dd class = "col-sm-10">@Model.Category?.Name</dd>
        <dt class = "col-sm-2">Colour</dt>
        <dd class = "col-sm-10">@Model.BoatColour?.Name</dd>
        <dt class = "col-sm-2">Hourly Rate</dt>
        <dd class = "col-sm-10">$@Model.HourRate</dd>
        <dt class = "col-sm-2">Daily Rate</dt>
        <dd class = "col-sm-10">$@Model.DailyRate</dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<h3>User Comments</h3>

@if (Model.Comments.Any())
{
    <div class="comments-section">
        @foreach (var comment in Model.Comments.OrderByDescending(c => c.Createdat))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">@comment.Author - @comment.Createdat.ToString("MMM dd, yyyy hh:mm tt")</h6>
                    <p class="card-text">@comment.Content</p>
                </div>
            </div>
        }
    </div>
}
else
{
    <p><em>No comments yet. Be the first to comment!</em></p>
}

<hr />
<h4>Add a Comment</h4>
<form asp-action="AddComment" method="post">
    <input type="hidden" name="boatId" value="@Model.BoatId" />
    
    <div class="form-group mb-3">
        <label for="author">Your Name</label>
        <input type="text" class="form-control" id="author" name="author" required maxlength="50" />
    </div>
    
    <div class="form-group mb-3">
        <label for="content">Comment</label>
        <textarea class="form-control" id="content" name="content" rows="3" required maxlength="500"></textarea>
    </div>
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    
    <button type="submit" class="btn btn-primary">Submit Comment</button>
</form>